<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/background_profile_novije">

    <ProgressBar
        android:id="@+id/determinateBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="25"/>

<androidx.cardview.widget.CardView
    android:id="@+id/profileGore"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="7dp"
    app:cardCornerRadius="40dp"
    android:backgroundTint="@color/prozirno2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/prozirno"
        android:gravity="center"
        android:layout_marginHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profileHeadingTxt"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:fontFamily="@font/linden_hill"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="@color/prozirno">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:backgroundTint="@color/prozirno"
            android:layout_marginTop="70sp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="105dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/prozirno2">
                <TextView
                    android:id="@+id/carbGoalTxtShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/linden_hill"
                    android:textStyle="bold"
                    android:text="Carbs"
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="52dp"
                android:backgroundTint="@color/prozirno2"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/proteinGoalTxtShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/linden_hill"
                    android:text="Protein"
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="54dp"
                android:backgroundTint="@color/prozirno2"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/calorieGoalTxtShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/linden_hill"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Calorie Goal"
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/prozirno2"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/waterGoalTxtShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/linden_hill"
                    android:text="Water Goal"
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="260dp"
            android:layout_marginTop="70sp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="105dp"
                android:backgroundTint="@color/prozirno2"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/carbsTxtNumShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:fontFamily="@font/linden_hill"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/prozirno2"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/proteinTxtNumShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/linden_hill"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="54dp"
                android:backgroundTint="@color/prozirno2"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/calorieGoalTxtNumShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/linden_hill"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="66dp"
                android:layout_marginStart="0dp"
                android:backgroundTint="@color/prozirno2"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/waterGoalTxtNumShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/linden_hill"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewChange"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toTopOf="@+id/profilePod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileGore"
        android:backgroundTint="@color/prozirno">

        <LinearLayout
            android:id="@+id/lijeviTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/prozirno2"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/CarbTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/linden_hill"
                    android:text="Carb Goal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="55dp"
                android:backgroundTint="@color/prozirno2"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/ProteinTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein Goal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/linden_hill"
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/prozirno2"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/calorieGoalTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calorie Goal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/linden_hill"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/prozirno2"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/waterGoalTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Goal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/linden_hill"
                    android:layout_marginHorizontal="9dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/desniTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="250dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/carbGoalNumTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Carb Goal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="number"
                android:fontFamily="@font/linden_hill"/>

            <EditText
                android:id="@+id/proteinGoalNumTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Protein Goal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="number"
                android:fontFamily="@font/linden_hill"/>

            <EditText
                android:id="@+id/calorieGoalNumTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Calorie goal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="number"
                android:fontFamily="@font/linden_hill"/>

            <EditText
                android:id="@+id/waterGoalNumTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="water goal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="number"
                android:fontFamily="@font/linden_hill"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>




    <Button
        android:id="@+id/changeStatsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Stats"
        app:layout_constraintBottom_toTopOf="@id/profilePod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/buttoniBoja"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/changeStatsBtnFAKE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/buttoniBoja"
        android:text="Change Stats"
        app:layout_constraintBottom_toTopOf="@id/profilePod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardViewShow" />


<androidx.cardview.widget.CardView
    android:id="@+id/profilePod"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="7dp"
    app:cardCornerRadius="40dp"
    android:backgroundTint="@color/prozirno">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/prozirno2"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:backgroundTint="@color/prozirno2"
            app:cardCornerRadius="40dp"
            android:layout_marginStart="35dp">

            <ImageView
                android:id="@+id/waterButtonIMG"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="2dp"
                app:srcCompat="@drawable/water_drop_logo" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/view1"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:backgroundTint="@color/prozirno2"
            app:cardCornerRadius="40dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp">

            <ImageView
                android:id="@+id/foodButtonIMG"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="@string/foodBtn"
                app:srcCompat="@drawable/food_logo"
                android:layout_marginStart="2.5dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewHome"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:backgroundTint="@color/prozirno2"
            app:cardCornerRadius="40dp"
            android:layout_marginEnd="35dp">

            <ImageView
                android:id="@+id/homeButtonIMG"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/home_logo"
                android:layout_marginStart="2.5dp"
                android:text="@string/profileBtn"/>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
</androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/profileStatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/buttoniBoja"
        android:text="Profile Stats"
        app:layout_constraintBottom_toTopOf="@id/profilePod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardViewShow" />


</androidx.constraintlayout.widget.ConstraintLayout>