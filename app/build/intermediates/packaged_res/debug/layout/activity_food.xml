<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodActivity"
    android:background="@drawable/background_pocetna_novije">

    <ProgressBar
        android:id="@+id/determinateBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="25"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foodLists"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/profilePod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodGore" >
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center">

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/foodGore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/prozirno2"
        app:cardCornerRadius="40dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/prozirno"
            android:gravity="center"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/foodHeadingTxt"
                android:textColor="@color/white"
                android:fontFamily="@font/linden_hill"
                android:textSize="40sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/profilePod"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginBottom="5dp"
    android:backgroundTint="@color/prozirno2"
    app:cardCornerRadius="40dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/prozirno"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:backgroundTint="@color/prozirno2"
            app:cardCornerRadius="40dp"
            android:layout_marginStart="35dp">

            <ImageView
                android:id="@+id/waterButtonIMG"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="2dp"
                app:srcCompat="@drawable/water_drop_logo" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/view1"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:backgroundTint="@color/prozirno2"
            app:cardCornerRadius="40dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp">

            <ImageView
                android:id="@+id/homeButtonIMG"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="@string/foodBtn"
                app:srcCompat="@drawable/home_logo"
                android:layout_marginStart="2.5dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewHome"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:backgroundTint="@color/prozirno2"
            app:cardCornerRadius="40dp"
            android:layout_marginEnd="35dp">

            <ImageView
                android:id="@+id/profileButtonIMG"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/profile_logo"
                android:layout_marginStart="2.5dp"
                android:text="@string/profileBtn"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>