<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/cardViewPozadina">


    <TextView
        android:id="@+id/calorieIntakeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2850 / 3000 kcal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/linden_hill"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@color/prozirnoTamnije"
        android:layout_marginEnd="35dp"
        android:padding="2dp"/>
    
    <TextView
        android:id="@+id/dateOfIntakeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/03/2024"
        android:gravity="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/linden_hill"
        android:layout_marginStart="260dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@color/prozirno"
        android:padding="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>